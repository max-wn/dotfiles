# GENERAL OPTIONS
set header_cache     = ~/Mail/icloud.com/cache/headers
set message_cachedir = ~/Mail/icloud.com/cache/bodies
unset record

# RECEIVE OPTIONS
set imap_check_subscribed
unset imap_passive
set imap_keepalive = 900
set mail_check     = 120

# REMOTE FOLDERS
set folder    = 'imaps://'$my_icloud_user'@imap.mail.me.com:993'
set spoolfile = 'imaps://'$my_icloud_user'@imap.mail.me.com/INBOX'
set postponed = '+Drafts'
set record    = '+Sent Messages'

# SEND OPTIONS
set ssl_starttls  = yes
set ssl_force_tls = yes
set realname  = $my_name
set from      = $my_icloud_user
set smtp_url  = 'smtps://'$my_icloud_user'@smtp.mail.me.com:587/'
set smtp_pass = $my_icloud_pass

set imap_pipeline_depth=0
