#!/bin/sh

# zsh aliases with colorized commands when possible.
alias \
	ll="ls -lahG"

# bash aliases with colorized commands when possible.
alias \
	lb="ls -lah --color=auto" \
	diffb="diff -rys --color=auto"

# zsh and bash aliases
# misc
alias \
    grep="grep --color=auto" \
    diff="diff -rys" \
    rm="rm -i" \
    cp="cp -i" \
    mv="mv -i"

# run mutt from attachments directory for save attachments in it
alias mutt="cd ~/attachments && mutt"

# rum moc in XDG directory
alias mocp="mocp -M \"$XDG_CONFIG_HOME\"/moc"

# sdcv
alias geru="sdcv -uc \"Universal (Ge-Ru)\""

# alacritty
alias nt="alacritty msg create-window"  # creates new tab

# vimwiki
alias vw="nvim -c VimwikiIndex"  # open vimwiki from terminal

## xdg-ninja advise. works not properly and I do not use it.
# alias mbsync to use a custom configuration file location
#alias mbsync=mbsync -c "$XDG_CONFIG_HOME"/isync/mbsyncrc
# Alias abook to use custom locations for configuration and data:
#alias abook="abook --config \"$XDG_CONFIG_HOME\"/abook/abookrc --datafile \"$XDG_DATA_HOME\"/abook/addressbook"
